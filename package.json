{
  "name": "id-erp",
  "private": true,
  "version": "0.0.0",
  "description": "A comprehensive interior design ERP for managing clients, vendors, designers, and complex project lifecycles with task management.",
  "author": "Kydo Solutions",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.kydosolutions.erp",
    "productName": "Kydo Solutions",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/kydoicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Kydo Solutions",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "uninstallDisplayName": "Kydo Solutions"
    }
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "firebase": "^12.6.0",
    "lucide-react": "^0.555.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^4.10.1",
    "recharts": "^3.5.1"
  },
  "dependenciesMeta": {
    "react-icons": {
      "optional": false
    }
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
